@model IEnumerable<FilmsTestTask.Services.Models.CategoryMvcModel>

@{
    ViewData["Title"] = "Категорії";
}

<h1>Категорії</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Додати</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Категорія
            </th>
            <th>
                Кількість фільмів у категорії
            </th>
            <th>
                Рівень вкладеності
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOfFilms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Layer)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Редагувати</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
